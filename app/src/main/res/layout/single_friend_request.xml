<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">


    <ImageView
        android:id="@+id/userImageRequst"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/requestUserName"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/userImageRequst"
        android:text="Sara Khan"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/simpleRequestText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requestUserName"
        android:layout_marginLeft="70dp"
        android:text="Can we be Friends" />


    <Button
        android:id="@+id/AcceptRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userImageRequst"
        android:text="accept" />


    <Button
        android:id="@+id/RejectRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userImageRequst"
        android:text="decline" />


</RelativeLayout>